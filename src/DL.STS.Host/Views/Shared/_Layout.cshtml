<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - DL.STS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/global.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("css", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-primary">
            <div class="container">
                <a asp-action="index" asp-controller="dashboard" asp-area="" class="navbar-brand">
                    Security Token Service
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-action="index" asp-controller="dashboard" asp-area="" class="nav-link">Dashboard</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <environment include="Development">
        <script src="~/scripts/global.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/scripts/global.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
