<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - DL.STS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/libs/fontawesome/all.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/global.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/libs/fontawesome/all.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("css", required: false)
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-9 col-md-7 col-lg-5 col-xl-4">
                <header></header>
                <main>@RenderBody()</main>
                <footer></footer>
            </div>
        </div>
    </div>

    <environment include="Development">
        <script src="~/scripts/global.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/scripts/global.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
